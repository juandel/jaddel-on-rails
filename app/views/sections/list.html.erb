<%@page_title = "Section list" %>

<%=
if params[:subject_id]

link_to("<< Back to it's PAGE list", {:controller => "pages", :action => 'list', :subject_id => @subject_id}, :class => 'subjectBack-link action') 

else

link_to("<< Back to SUBJECT list", {:controller => "subjects", :action => 'list'}, :class => 'subjectBack-link action') 

end
%>
	
<div class="section list">
	<h2>Sections </h2>
	<h3>-Page: <%= @page.name %></h3>
<%= link_to("Add New Section", {:action => 'new', :page_id => @page.id}, :class => 'newSection-link action') %>

	<table class="listing" summary="Section List">
		<tr class="header">
			<th>Position</th>
			<th>Section</th>
			<th>Id</th>
			<th>Visible</th>
			<th>Content type</th>
			<th>Actions</th>
		</tr>
		<% @sections.each do |section| %>
		<tr>
			<td><%= section.position %></td>
			<td><%= section.name %></td>
			<td><%= section.page_id %></td>
			<td class="center"><%= status_tag(section.visible) %></td>
			<td class="center"><%= section.content_type %></td>
			<td class="actions">
				<%= link_to("Show", {:action =>'show', :id => section.id, :page_id => @page.id}, :class => 'action show') %>
				<%= link_to("Edit", {:action =>'edit', :id => section.id, :page_id => @page.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action =>'delete', :id => section.id, :page_id => @page.id}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>