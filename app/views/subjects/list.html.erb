<%@page_title = "Subject list" %>
<div class="subject list">
	<h2>Subjects</h2>
	<h3 id='found'><%= pluralize(@subjects.size, ' subject')%> found</h3>

<%= link_to("Add New Subject", {:action => 'new'}, :class => 'newSubject-link action') %>
	<table class="listing" summary="Subject List">
		<tr class="header">
			<th>Position</th>
			<th>Subject</th>
			<th>ID</th>
			<th>Visible</th>
			<th>Pages</th>
			<th>Actions</th>
		</tr>
		<% @subjects.each do |subject| %>
		<tr class="<%= cycle('odd','even') %>">
			<td><%= subject.position %></td>
			<td><%= subject.name %></td>
			<td><%= subject.id %></td>
			<td class="center"><%= status_tag(subject.visible) %></td>
			<td class="center"><%= subject.pages.size %></td>
			<td class="actions">
				<%= link_to("View Pages", {:controller =>'pages', :action =>'list', :subject_id => subject.id}, :class => 'action show') %>
				<%= link_to("Show", {:action =>'show', :id => subject.id}, :class => 'action show') %>
				<%= link_to("Edit", {:action =>'edit', :id => subject.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action =>'delete', :id => subject.id}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>