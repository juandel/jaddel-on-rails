-@page_title = "Admin Login" 
.login
 = form_tag(:action => 'attempt_login') do 
  %table
   %tr
    %td 
    = label_tag(:username) 
    %td 
    = text_field_tag(:username) 
   %br
   %tr
    %td 
    = label_tag(:password) 
    %td 
    = password_field_tag(:password) 
   %tr
    %td &nbsp;
    %td 
    = submit_tag("Log In") 
  