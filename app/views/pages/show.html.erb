<%@page_title = "Page Description" %>
<%= link_to("<<BACK TO LIST", {:action => 'list', :subject_id => @subject.id}, :class => 'back-link') %>
<div class="page show">
	<h2>Show Page</h2>


	<table summary="Page detail view">
		<tr>
			<th>Name</th>
			<td><%= @page.name %></td>
		</tr>	
		<tr>
			<th>Position</th>
			<td><%= @page.position %></td>
		</tr>	
		<tr>
			<th>Visible</th>
			<td><%= status_tag(@page.visible) %></td>
		</tr>	
		<tr>
			<th>Created</th>
			<td><%= @page.created_at %></td>
		</tr>	
		<tr>
			<th>Updated</th>
			<td><%= @page.updated_at %></td>
		</tr>	
	</table>


</div>